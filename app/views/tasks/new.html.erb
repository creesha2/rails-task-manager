<h1>Add a new task</h1>

<%= form_with(model: @task, url: tasks_path, method: :post) do |f| %>
  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <%= f.label :details %>
    <%= f.text_area :details %>
  </div>

  <div class="field">
    <%= f.check_box :completed %>
    <%= f.label :completed %>
  </div>

  <div class="actions">
    <%= f.submit "Create Task" %>
  </div>
<% end %>

<%= link_to 'Back to list', tasks_path %>
